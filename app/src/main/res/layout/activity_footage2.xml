<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tunnel.activity.footage2"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/imageButton_back"
        android:layout_width="55dp"
        android:layout_height="57dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back"
        tools:ignore="MissingConstraints"
       />

    <TextView
        android:id="@+id/tv_tunnel_name"
        android:layout_width="74dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="**隧道  "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_upload"
        app:layout_constraintStart_toEndOf="@+id/imageButton_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_process_id"
        android:layout_width="81dp"
        android:layout_height="53dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_weight="1"
        android:gravity="center"

        android:text="III进尺数"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_upload"
        app:layout_constraintStart_toEndOf="@+id/tv_tunnel_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_rock_grade"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="v+"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toEndOf="@+id/tv_process_id" />

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="406dp"
        android:layout_height="59dp"
        android:gravity="center|left"
        android:text="刘鹏 上传于 2019-10-15 13:45:47"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_back" />

    <TextView
        android:id="@+id/tv_tunnel_section"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="隧道标段："
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_upload"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_tunnel_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="隧道名称："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tunnel_section" />

    <TextView
        android:id="@+id/tv_tunnel_subface"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="掌子面："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_upload_time" />

    <TextView
        android:id="@+id/tv_rock_grade_footage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="主流程："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tunnel_subface" />

    <TextView
        android:id="@+id/tv_design_rock_grade"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设计围岩等级："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rock_grade_footage" />

    <TextView
        android:id="@+id/tv_report_footage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="进尺数："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_design_rock_grade" />

    <TextView
        android:id="@+id/tv_sum_footage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="累计进尺数："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_report_footage" />

    <TextView
        android:id="@+id/tv_explanation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="备注："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sum_footage" />

    <TextView
        android:id="@+id/tv_save_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="保存时间："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_explanation" />

    <TextView
        android:id="@+id/tv_upload_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="上报时间："
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tunnel_id" />

</androidx.constraintlayout.widget.ConstraintLayout>